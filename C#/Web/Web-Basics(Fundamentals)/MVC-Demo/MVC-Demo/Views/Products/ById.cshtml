@model ProductViewModel
@{
    ViewBag.Title = $"Product ID: {Model.Id}";
}
<html>
    <body>
        <div class="card">
            <div class="card-header">@ViewBag.Title</div>
            <div class="card-body">
                <h5>Product Name: @Model.Name</h5>
                <p>Price: @Model.Price</p>
            </div>
        </div>
    </body>
</html>